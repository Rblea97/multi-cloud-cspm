# Test Mode Configuration
TEST_MODE=true
TEST_AWS_ACCOUNT_ID=123456789012  # Your test AWS account ID
TEST_AZURE_SUBSCRIPTION_ID=  # Your test Azure subscription (optional)
TEST_RESOURCE_PREFIX=cspm-test-
TEST_MAX_SCAN_RESOURCES=100

# AWS Test Credentials (choose one method)
AWS_REGION=us-east-1
AWS_PROFILE=default  # OR use AWS_ACCESS_KEY_ID + AWS_SECRET_ACCESS_KEY

# Azure Test Credentials (optional for Phase 1-3)
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
# For service principal: AZURE_CLIENT_ID and AZURE_CLIENT_SECRET

# Database (use separate test DB or in-memory)
DATABASE_URL=sqlite:///:memory:

# Logging
LOG_LEVEL=INFO

# Safety: Disable auto-fix initially
REMEDIATION_AUTO_FIX_ENABLED=false
